@model List<BlogApplication.Models.BlogPost>

@{
    ViewData["Title"] = "Category";
    var categoryName = Model.Count > 0 ? Model.First().Category : "No Posts Found";
}

<div class="container my-4">
    <h1 class="text-center mb-5 fw-bold text-primary">@categoryName Posts</h1>

    @if (Model.Count == 0)
    {
        <p class="text-center text-muted">No posts available in this category yet.</p>
    }
    else
    {
        <div class="row">
            @foreach (var post in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <img src="@post.ImageUrl" class="card-img-top" alt="@post.Title">
                        <div class="card-body">
                            <h5 class="card-title">@post.Title</h5>
                            <p class="card-text">@post.Content.Substring(0, Math.Min(100, post.Content.Length))...</p>
                            <a href="/Home/ReadPost/@post.Id" class="btn btn-primary btn-sm">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
