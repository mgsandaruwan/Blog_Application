@model BlogApplication.Models.BlogPost
@{
    ViewData["Title"] = "Read Post";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title">
                <div class="card-body">
                    <h2 class="fw-bold mb-3">@Model.Title</h2>
                    <p class="text-muted mb-1">Category: <strong>@Model.Category</strong></p>
                    <hr />
                    <p class="mt-3" style="white-space: pre-line;">@Model.Content</p>
                    <a href="/" class="btn btn-outline-dark mt-3">← Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
